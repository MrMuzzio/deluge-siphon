{
  "name": "DelugeSiphon",
  "version": "0.62",
  "description": "Adds links to a remote Deluge server",
  "browser_action": {
    "defaultTitle":"DelugeSiphon",
    "default_icon": "icon.png",
	"default_popup": "popup.html"
  },
  "icons": {	
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png" 
  },
  "permissions": [
	"http://*/*",
	"contextMenus"
  ],
  "content_scripts": [{
    "all_frames": true,
    "matches":    ["http://*/*", "https://*/*", "ftp://*/*"], 
    "js":         ["content_handler.js"],
    "css":	  ["content_styles.css"]
  }],
  "options_page": "options.html",
  "background_page": "controller.html"
}