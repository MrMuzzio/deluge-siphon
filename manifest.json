{
  "name": "DelugeSiphon",
  "version": "0.64",
  "description": "Adds links to a remote Deluge server",
  "browser_action": {
    "defaultTitle":"DelugeSiphon",
    "default_icon": "icon.png",
	"default_popup": "popup.html"
  },
  "icons": {	
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png" 
  },
  "permissions": [
	"http://*/*", 
	"https://*/*", 
	"ftp://*/*",
	"contextMenus",
	"notifications"
  ],
  "content_scripts": [{
    "all_frames": true,
    "matches":    ["http://*/*", "https://*/*", "ftp://*/*"], 
    "js":         ["content_handler.js"],
    "css":	  []
  }],
  "manifest_version": 2,
  "options_page": "options.html",
  "background": {
    "scripts": [ "JSON.js","controller_communicator.js", "controller_actions.js" ]
  }
}